---
const projects = [
  { name: "Icy Montreal", url: "https://www.icymontreal.com" },
  { name: "GitHub", url: "https://github.com/sgalawar" },
];

const socials = [
  { name: "Instagram", url: "https://instagram.com/curio.sou" },
  { name: "LinkedIn", url: "https://www.linkedin.com/in/souheilalawar/" },
];
---

<div class="flex flex-col space-y-6 p-10 fade-in">
  <!-- Welcome message and my name -->
  <div class="w-fit">
    <p class="">you're now in the domains of</p>
    <h1 class="text-5xl font-bold tracking-tight mt-2">souheil al-awar</h1>
    <p class="mt-2">finder of solutions / computer wiz 🧙‍♂️</p>
    <div class="w-24 h-1 bg-gray-500 mt-2"></div> <!-- Divider -->
  </div>

  <!-- Recent Projects (Automatically Shows Latest Project) -->
  <h2 class="text-xl mt-4">i am qualified to do a number of things,</h2>

  <!-- Experience Ticker -->
  <div class="w-full overflow-hidden bg-gray-900 py-2">
    <div id="ticker" class="flex whitespace-nowrap gap-8 text-white text-sm font-medium">
      <span>📈 Bitcoin: $42,300</span>
      <span>📉 Ethereum: $3,100</span>
      <span>📈 Tesla: $210.45</span>
      <span>📉 Apple: $170.55</span>
      <span>📈 Google: $2,950.20</span>
    </div>
  </div>  

  <div class="space-y-3">
    {projects.length > 0 && (
      <div class="flex flex-col items-start space-y-4">
        <a href={projects[0].url} class="hover:text-gray-400 transition-all text-lg">
          {projects[0].name}
        </a>
        <div class="w-[500px] h-[200px] border border-gray-500 overflow-hidden rounded-lg shadow-md relative">
          <iframe 
            src={projects[0].url} 
            class="w-[832px] h-[335px] scale-[0.6] origin-top-left absolute top-0 left-0 border-none">
          </iframe>
        </div>
      </div>
    )}
  </div>

  <!-- Archived Projects -->
  {projects.length > 0 && (
    <>
      <h2 class="text-2xl mt-6">archived projects</h2>
      <div class="space-y-2">
        {projects.slice(1).map((project) => (
          <a href={project.url} class="block hover:text-gray-400 transition-all">
            <span>{project.name}</span>
          </a>
        ))}
      </div>
    </>
  )}

  <div class="w-24 h-1 bg-gray-500"></div> <!-- Divider -->

  <!-- Contacts -->
  <h2 class="text-2xl mt-6">contacts</h2>
  <div class="flex space-x-4">
    {socials.map((social) => (
      <a href={social.url} class="hover:text-gray-400 transition-all">{social.name}</a>
    ))}
  </div>
</div>
